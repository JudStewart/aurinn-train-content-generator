{
  "name": "fantasy-content-generator",
  "version": "3.3.0",
  "homepage": "https://github.com/thomascgray/fantasy-content-generator",
  "description": "Generates fantasy themed content, such as names, NPCs, storyhooks, and more",
  "keywords": [
    "dungeons and dragons",
    "dnd",
    "dnd5e",
    "rpg",
    "procgen",
    "procedural generation",
    "rpg-tool",
    "dnd-tool"
  ],
  "main": "dist/index.js",
  "scripts": {
    "preversion": "npm run build:browser && npm test",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags",
    "test": "ENVIRONMENT=test npx jest",
    "build": "parcel build src/index.js",
    "build:browser": "npx browserify -t require-globify ./src/index_browser.js | npx terser -o fantasy_content_generator.js",
    "build:browser:unminified": "npx browserify -t require-globify ./src/index_browser.js -o fantasy_content_generator.js",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "author": "Tom Gray <tom.c.gray@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^16.2.3",
    "eslint": "^6.6.0",
    "jest": "^24.1.0",
    "lodash": "^4.17.14",
    "parcel-bundler": "^1.12.4",
    "release-it": "^12.3.3",
    "require-globify": "^1.4.1",
    "seedrandom": "^3.0.5",
    "terser": "^3.16.1",
    "uglify-js": "^3.4.9"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
